{
  "compilerOptions": {
    // 指定ECMAScript目标版本，ES2020支持较新的JavaScript特性
    "target": "ES2020",

    // 保留JSX以便由后续工具处理，适用于Vue
    "jsx": "preserve",
    // 包含的库文件，这些指定了项目可以使用的API
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    // 使用defineProperty而不是赋值表达式来设置类的字段
    "useDefineForClassFields": true,

    // 指定生成的模块代码，ESNext表示使用最新的模块语法
    "module": "ESNext",

    // 指定模块解析策略，bundler适用于使用Vite/Webpack等打包工具
    "moduleResolution": "bundler",

    // 允许导入json文件并作为模块使用
    "resolveJsonModule": true,
    // 允许在导入语句中使用.ts扩展名
    "allowImportingTsExtensions": true,

    // 启用所有严格类型检查选项
    "strict": true,

    // 防止switch语句中的case落空
    "noFallthroughCasesInSwitch": true,
    // 报告未使用的局部变量错误
    "noUnusedLocals": true,

    // 报告未使用的参数错误
    "noUnusedParameters": true,
    // 不生成输出文件，由打包工具负责编译
    "noEmit": true,
    // 确保每个文件可以安全地被单独编译，有利于打包工具
    "isolatedModules": true,
    // 跳过声明文件的类型检查，提高编译速度
    "skipLibCheck": true
  },

  // 指定要包含在编译中的文件模式
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
